<button
  class="navbar__toggler"
  type="button"
  data-bs-toggle="collapse"
  data-bs-target="#navbarMenuCollapse"
  aria-controls="navbarMenuCollapse"
  aria-expanded="false"
  aria-label="Toggle navigation"
>
  <span class="icon icon-menu icon-menu-c">
    <span class="bars">
      <span class="bar1"></span>
      <span class="bar2"></span>
    </span>
  </span>
</button>

<style scoped lang="scss">
  .navbar__toggler {
    border: none;
    height: 48px;
    width: 40px;
    margin-left: 24px;
    padding: 0;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: relative;
    z-index: 100;
    background: transparent;
    color: var(--color-text);

    &[aria-expanded="true"] {
      width: 100%;
      transform: rotate(-45deg) scaleX(0.8);
      transform-origin: center;
    }
  }
  .icon-menu {
    color: currentColor;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: transparent;
    border-radius: 2px;
    opacity: 1;
  }
  .bars {
    width: 32px;
    display: flex;
    flex-direction: column;
    position: relative;
    transform: translateY(-1px);

    .bar1,
    .bar2 {
      display: flex;
      height: 2px;
      background: currentColor;
      width: 100%;
      transition: 0.3s;
      position: absolute;
      top: 50%;
    }
    .bar1 {
      transform: translateY(-6px);
      width: 100%;
    }
    .bar2 {
      transform: translateY(6px);
      width: 100%;
    }
  }
</style>

